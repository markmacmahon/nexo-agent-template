# Local database
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/nexo_db

# Test database
TEST_DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5433/nexo_test_db

# Connection pooling strategy (default: "null")
# "null" - No pooling, new connection per request (best for serverless: Vercel, Lambda)
# "queue" - Connection pool with reuse (best for traditional servers: Docker, VPS, Kubernetes)
# DATABASE_POOL_CLASS=null
# DATABASE_POOL_SIZE=5
# DATABASE_MAX_OVERFLOW=10
# DATABASE_POOL_RECYCLE=3600

# Secret keys
ACCESS_SECRET_KEY=your_access_secret_key
RESET_PASSWORD_SECRET_KEY=your_reset_password_secret_key
VERIFICATION_SECRET_KEY=your_verification_secret_key

# OpenAPI generated file output path (relative to backend directory)
# IMPORTANT: Frontend must use the same path (relative to frontend directory)
# Both point to the same file: <project-root>/local-shared-data/openapi.json
OPENAPI_OUTPUT_FILE=../local-shared-data/openapi.json

# Localhost Email configuration
MAIL_USERNAME=test
MAIL_PASSWORD=test
MAIL_FROM=test@test.com
MAIL_PORT=1025
MAIL_SERVER=localhost
MAIL_STARTTLS=False
MAIL_SSL_TLS=False
USE_CREDENTIALS=False

# Frontend (NextJS)
FRONTEND_URL=http://localhost:3000

# CORS (Allow all origins for development; adjust this to restrict origins in production deployments)
CORS_ORIGINS=["*"]

# Backend base URL (default: http://localhost:8000). Webhook URLs to this host are allowed when it is localhost.
# BACKEND_URL=http://localhost:8000

# Webhook header names (override to brand your webhook headers)
# WEBHOOK_HEADER_APP_ID=X-App-Id
# WEBHOOK_HEADER_THREAD_ID=X-Thread-Id

# OPENAPI (Uncomment the line below to disable the /docs and openapi.json urls)
# OPENAPI_URL=""